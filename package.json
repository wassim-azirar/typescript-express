{
  "name": "project",
  "version": "1.0.0",
  "description": "TypeScript with Express.js",
  "author": "Wassim AZIRAR",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wassim-azirar/typescript-express"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "body-parser": "1.19.1",
    "compression": "1.7.4",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dotenv": "^10.0.0",
    "express": "4.17.1",
    "express-flash": "0.0.2",
    "express-rate-limit": "5.5.1",
    "helmet": "4.6.0",
    "hpp": "0.2.3",
    "json-server": "0.17.0",
    "lusca": "1.7.0",
    "morgan": "1.10.0",
    "node-emoji": "1.11.0",
    "response-time": "2.3.2",
    "typescript": "4.5.4"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.2",
    "@types/compression": "1.7.2",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/express-flash": "0.0.2",
    "@types/lusca": "1.7.1",
    "@types/morgan": "1.9.3",
    "@types/node": "16.11.60",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "concurrently": "6.4.0",
    "eslint": "8.4.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "prettier": "2.5.1",
    "pretty-quick": "3.1.2"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "tsc",
    "start": "concurrently \"npm run start:server\" \"npm run start:backend\"",
    "start:server": "tsc && node dist/app.js",
    "start:backend": "json-server --watch db.json --routes routes.json --port 3001"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --pattern '**/src/**/*'"
    }
  }
}
